<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="localMusicPlayerTest.Pages.Tracks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:localMusicPlayerTest.Pages"
    xmlns:models="using:localMusicPlayerTest.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:localMusicPlayerTest.Controls"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="NakedListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" ColumnSpacing="32" Padding="16" Margin="0,0,0,-16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Frame Grid.Column="0" Width="48"/>
                <TextBlock Grid.Column="1" Text="Track Info" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="-8,0,0,0"/>
                <TextBlock Grid.Column="2" Text="Album" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="3" Text="Genre" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="4" Text="Format" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="5" Text="Length" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,16,0"/>
            </Grid>
            <ListView Grid.Row="1"
                ItemsSource="{x:Bind AllTracks}"
                IsItemClickEnabled="False" 
                ItemContainerStyle="{StaticResource NakedListViewItemStyle}"
                Padding="16">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Song">
                        <controls:TrackItemControl 
                Song="{x:Bind}"
                Clicked="TrackItemControl_Clicked"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
